@model LoginModel

@{
    ViewBag.Title = "Login";
}

<style>
    .register {
        width: 50vw;
    }
    
    .title {
        padding-top: 15px !important;
    }
</style>

<div class="axil-comment-area">
    <!-- Start Comment Respond  -->
    <h4 class="title text-center">Login</h4>
    <div class="comment-respond d-flex align-items-center justify-content-center">
        <form asp-action="Login" asp-controller="Auth" method="post" class="register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email"/>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password"/>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <input asp-for="KeepMeSignedIn" class="form-check-input" >
                <label class="form-check-label text-white" asp-for="KeepMeSignedIn"></label>
              </div>
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                <div class="form-submit cerchio">
                    <input
                        name="submit"
                        type="submit"
                        id="submit"
                        class="axil-button button-rounded"
                        value="Sign in"/>
                </div>
            </div>
        </form>
    </div>
</div>