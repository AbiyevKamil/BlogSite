@model string

@{
    ViewBag.Title = "Email Confirmation";
}

<style>
    .register {
        width: 50vw;
    }
    
    .title {
        padding-top: 15px !important;
    }
</style>

<div class="axil-comment-area">
    <!-- Start Comment Respond  -->
    <h4 class="title text-center">Login</h4>
    <div class="comment-respond d-flex align-items-center justify-content-center">
        <form asp-action="SendConfirmEmail" asp-controller="Auth" method="get" class="register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <div class="form-group">
                    <label for="email"></label>
                    <input id="email" name="email"/>
                    <span class="text-danger">@ViewBag.Status</span>
                </div>
                <div class="col-lg-12 d-flex justify-content-center align-items-center">
                    <div class="form-submit cerchio">
                        <input
                            type="submit"
                            id="submit"
                            class="axil-button button-rounded"
                            value="Send"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>