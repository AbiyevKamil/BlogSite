@model UpdateBlogModel

@{
    ViewBag.Title = "Update Blog";
}

<style>
    .register {
        width: 80vw;
    }
    
    .form-select {
        font-size: 16px !important;
    }
    
    .title {
        padding-top: 15px !important;
    }
</style>
<div class="axil-comment-area">
    <!-- Start Comment Respond  -->
    <h4 class="title text-center">Update Blog</h4>
    <div class="comment-respond d-flex align-items-center justify-content-center">
        <form asp-action="UpdateBlog" asp-controller="Blogs"  method="post" enctype="multipart/form-data" class="register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <input type="hidden" asp-for="Id">
                <input type="hidden" asp-for="UniqueUrl">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title"/>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Banner" class="form-label"></label>
                    <input style="font-size: 16px !important;" class="form-control" type="file" asp-for="Banner" accept="image/*">
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea class="text-white" style="min-height: 500px" asp-for="Content"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>
                <div class="form-group">
                    <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    </select>
                </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                <div class="form-submit cerchio">
                    <input
                        name="submit"
                        type="submit"
                        id="submit"
                        class="axil-button button-rounded"
                        value="Update"/>
                </div>
            </div>
        </form>
    </div>
</div>